  <body class="teal accent-2">
    <!-- navigation -->
      <nav class="grey lighten-1">
        <div class="container">
          <a href="destinations/index" class="brand-logo"><i class="material-icons left" style="margin-top: 3px; margin-right: 2px">home</i>Home</a>
