<h1> My Travel Diary </h1><br>

<form action="/destinations" method="post">
    <input type="string" name="destination[title]" placeholder="Title" id="title"><br><br>
    <input type="date" name="destination[date]" id="date"><br><br>
    <input type="string" name="destination[season]" placeholder="Season" id="season"><br><br>
    <input type="string" name="destination[location]" placeholder="Location" id="location"><br><br>
    <input type="string" name="destination[attractions]" placeholder="Attractions" id="attractions"><br><br>
    <input type="string" name="destination[restaurants]" placeholder="Restaurants" id="restaurants"><br><br>
    <input type="string" name="destination[shopping]" placeholder="Shopping" id="shopping"><br><br>
    <textarea type="text" name="destination[content]" id="content" cols="30" rows="10" placeholder="Enter your travel story here..."></textarea><br><br>
    <input type="submit" value="Add Destination">
</form>